<h1>Touchpoints</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Purpose</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Form</th>
      <th>Storage</th>
      <th>Submissions</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @touchpoints.each do |touchpoint| %>
      <tr>
        <td><%= link_to touchpoint.name, touchpoint %></td>
        <td><%= touchpoint.purpose %></td>
        <td><%= touchpoint.start_date %></td>
        <td><%= touchpoint.end_date %></td>
        <td><%= link_to(touchpoint.form.name, touchpoint_form_path(touchpoint, touchpoint.form)) %></td>
        <td><%= touchpoint.enable_google_sheets? ? "Google Sheets" : "Database" %></td>
        <td><%= link_to "View", touchpoint_submissions_path(touchpoint) %></td>
        <td><%= link_to 'Edit', edit_touchpoint_path(touchpoint) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Touchpoint', new_touchpoint_path, class: "usa-button" %>
