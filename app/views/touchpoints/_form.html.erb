<%= form_with(model: touchpoint, local: true) do |form| %>
  <% if touchpoint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(touchpoint.errors.count, "error") %> prohibited this touchpoint from being saved:</h2>


      <% touchpoint.errors.full_messages.each do |message| %>
        <div class="usa-alert usa-alert-error" >
          <div class="usa-alert-body">
            <h3 class="usa-alert-heading">Error</h3>
            <p class="usa-alert-text">
              <%= message %>
            </p>
          </div>
        </div>

      <% end %>

    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :organization_id %>
    <%= form.select :organization_id, options_for_select(Organization.all.map { |org| [org.name, org.id] }, selected: touchpoint.organization.id), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :gtm_container_id %>
    <%= form.text_field :gtm_container_id %>
  </div>

  <div class="field">
    <%= form.label :purpose %>
    <%= form.text_area :purpose %>
  </div>

  <div class="field">
    <%= form.label :meaningful_response_size %>
    <%= form.number_field :meaningful_response_size %>
  </div>

  <div class="field">
    <%= form.label :behavior_change %>
    <%= form.text_area :behavior_change %>
  </div>

  <div class="field">
    <%= form.label :notification_emails %>
    <%= form.text_field :notification_emails %>
  </div>

  <div class="field">
    <%= form.label :embed_code %>
    <%= form.text_area :embed_code %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
