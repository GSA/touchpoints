<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
    <title>
      Touchpoints - Internal Server Error (500)
    </title>
    <style>
    	.div-centered {
    		text-align: center;
    	}
    </style>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

