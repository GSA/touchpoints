<%= render 'user_mailer/components/header' %>
<h3>
  Event Notification
  <br>
  <%= @subject %>
</h3>
<p>
  The Service,
  <%= @service.name %>
  was <%= @event %> by
  <%= @service.service_owner.email %> at
  <%= @service.organization.name %>.
</p>
<% if @link.present? %>
<p>
  <%= link_to @link, @link %>
</p>
<% end %>
