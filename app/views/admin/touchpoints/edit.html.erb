<div class="well">
  <h1>
    Editing a Touchpoint
  </h1>
  <%= render 'form', touchpoint: @touchpoint %>
</div>
<p>
  <%= link_to 'Show', admin_touchpoint_path(@touchpoint), class: "usa-button" %>
  <%= link_to 'All Touchpoints', admin_touchpoints_path, class: "usa-button usa-button--outline" %>
  <% if @touchpoint.submissions.present? %>
  <%= link_to 'Delete', "#", class: "usa-button usa-button-disabled" %>
  <% else %>
  <%= link_to 'Delete', admin_touchpoint_path(@touchpoint), method: :delete, data: { confirm: 'Are you sure?' }, class: "usa-button usa-button--secondary" %>
  <% end %>
</p>
