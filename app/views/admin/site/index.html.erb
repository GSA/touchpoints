<% content_for :full_layout do %>
<section class="light-blue-bg">
  &nbsp;
  <div class="grid-container">
    <div>
      <h1>
        Welcome to Touchpoints
      </h1>

      <p>
        You are a
        <%= current_user.role %>
        of
        <%= current_user.organization.name %>.
      </p>
    </div>
  </div>
  <br>
</section>
<section>
  <main id="main-content">
    <div class="grid-container">
      <% if admin_permissions? %>
      <div class="well">
        <p>
          <ul class="usa-list">
            <li>
              <a href="/admin/organizations">
                <span>Manage Organizations</span>
              </a>
            </li>
            <li>
              <a href="/admin/forms">
                <span>Manage Forms</span>
              </a>
            </li>
            <li>
              <a href="/admin/sidekiq">
                <span>Manage Sidekiq</span>
              </a>
            </li>
          </ul>
        </p>
      </div>
      <%= render 'components/weekly_metrics' %>
      <br>
      <div class="forms hisp">
        <% @hisp_forms = Form.where(hisp: true).includes(:organization).order(:organization_id) %>
        <h3>
          <%= @hisp_forms.count %> HISP Forms
          <% total_responses = 0 %>
        </h3>
        <ul>
        <% @hisp_forms.each do |form| %>
          <% total_responses = total_responses + form.submissions.size %>
          <li>
            <%= form.organization.name %>
            <strong>
              <%= link_to form.name, admin_form_path(form) %>
            </strong>
            has
            <%= pluralize(form.submissions.size, "Response") %>.
          </li>
        <% end %>
        </ul>

        <p>
          Total: <%= pluralize(total_responses, "responses") %>
        </p>
      </div>
      <% else %>
        <p>
          <small>
            A Touchpoint is a point of interaction between a service and a User.
            A Touchpoint includes a Form. Customers respond to Forms and create Responses as feedback.
          </small>
        </p>
        <h4>
          What's next?
        </h4>

        <ol>
          <li>
            Create a Touchpoint
          </li>
          <li>
            Update the Touchpoint's Form
          </li>
          <li>
            Test the Form by creating a Response
          </li>
          <li>
            Deploy the Form to Users on your website or via your email system
          </li>
          <li>
            Receive feedback from Users
          </li>
        </ol>
      <% end %>
      <br>
      <br>
    </div>
  </main>
</section>
<% end %>
