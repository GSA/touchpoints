<% content_for :navigation_title do %>
  Editing CSCRM Data Collection 2
<% end %>

<p>
  <%= link_to admin_cscrm_data_collections2_path(@cscrm_data_collection) do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to CSCRM Data Collection
  <% end %>
</p>

<div class="grid-row margin-bottom-3">
  <div class="desktop:grid-col-6">
  <%= render "form", cscrm_data_collection: @cscrm_data_collection %>

  <%- if @cscrm_data_collection.persisted? %>
    <%= button_to admin_cscrm_data_collections2_path(@cscrm_data_collection),
        class: "usa-button usa-button--secondary float-right",
        method: :delete do %>
      <i class="fas fa-trash"></i>
      <span>
        Delete this collection
      </span>
    <% end %>
  <% end %>
  </div>
</div>