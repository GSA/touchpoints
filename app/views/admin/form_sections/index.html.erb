<p id="notice"><%= notice %></p>

<h1>Form Sections</h1>

<table>
  <thead>
    <tr>
      <th>Form</th>
      <th>Title</th>
      <th>Position</th>
      <th>Next section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_sections.each do |form_section| %>
      <tr>
        <td><%= form_section.form_id %></td>
        <td><%= form_section.title %></td>
        <td><%= form_section.position %></td>
        <td><%= form_section.next_section_id %></td>
        <td><%= link_to 'Show', form_section %></td>
        <td><%= link_to 'Edit', edit_form_section_path(form_section) %></td>
        <td><%= link_to 'Destroy', form_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Form Section', new_form_section_path %>
