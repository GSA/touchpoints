<%= form_with(model: form_section, url: (form_section.persisted? ? admin_form_form_section_path((@form)) : admin_form_form_sections_path(@form) ), local: true) do |form| %>
  <% if form_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form_section.errors.count, "error") %> prohibited this form_section from being saved:</h2>

      <ul>
      <% form_section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    For Form: <%= @form.name %>
  </p>

  <div class="field">
    <%= form.label :title, class: "usa-label" %>
    <%= form.text_field :title, class: "usa-input" %>
  </div>

  <div class="field">
    <%= form.label :position, class: "usa-label" %>
    <% form_section_options = @form.form_sections.select(&:persisted?).collect(&:position) %>
    <% form_section_options_max = form_section_options.compact.max %>
    <% form_section_options = form_section_options + [form_section_options_max + 1] %>
    <%= form.select :position, options_for_select(form_section_options, selected: form_section.position), { include_blank: "Select Form Section" }, { class: "usa-select" } %>
  </div>

  <p>
    <%= form.submit class: "usa-button" %>
  </p>
<% end %>
