<div class="well">
  <h4>
    Websites
  </h4>
  <%- if @websites.present? %>
  <table class="usa-table width-full">
    <thead>
      <tr>
        <th data-sortable scope="col">Domain</th>
        <th data-sortable scope="col">Lifecycle status</th>
        <th data-sortable scope="col">Production status</th>
      </tr>
    </thead>
    <tbody>
      <% @websites.each do |website| %>
      <tr>
        <td>
          <%= link_to website.domain, admin_website_path(website) %>
        </td>
        <td>
          <%= website.aasm_state %>
        </td>
        <td>
          <%= website.production_status %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <div class="usa-alert usa-alert--info">
    <div class="usa-alert__body">
      <p class="usa-alert__text">
        No Websites at this time
      </p>
    </div>
  </div>
  <% end %>
</div>

<div class="well">
  <h4>
    Data Collections
  </h4>
  <%- if @collections.present? %>
  <table class="usa-table width-full">
    <thead>
      <tr>
        <th data-sortable scope="col">Fiscal year</th>
        <th data-sortable scope="col">Quarter</th>
        <th data-sortable scope="col">Collection name</th>
        <th data-sortable scope="col">Service provider name</th>
      </tr>
    </thead>
    <tbody>
      <% @collections.includes(:service_provider).each do |collection| %>
      <tr>
        <td>
          <%= collection.year %>
        </td>
        <td>
          <%= collection.quarter %>
        </td>
        <td>
          <%= link_to collection.name, admin_collection_path(collection) %>
        </td>
        <td>
          <%= link_to collection.service_provider.name, admin_service_provider_path(collection.service_provider) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="well">
  <%= render 'components/users/events', events: @user_events %>
</div>
  <% else %>
  <div class="usa-alert usa-alert--info">
    <div class="usa-alert__body">
      <p class="usa-alert__text">
        No Collections at this time
      </p>
    </div>
  </div>
  <% end %>
</div>
<% end %>
