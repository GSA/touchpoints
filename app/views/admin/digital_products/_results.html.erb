<table class="usa-table">
  <thead>
    <tr>
       <th data-sortable scope="col">Name</th>
       <th data-sortable scope="col">Updated at</th>
       <th data-sortable scope="col">Status</th>
    </tr>
  </thead>

  <tbody>
    <% digital_products.each do |digital_product| %>
      <tr>
        <td><%= link_to digital_product.name, admin_digital_product_path(digital_product) %></td>
        <td><%= digital_product.updated_at %></td>
        <td>
          <span class="usa-tag">
            <%= digital_product.aasm_state %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
