<%= form_with(model: digital_product, url: (digital_product.persisted? ? admin_digital_product_path(digital_product) : admin_digital_products_path), data: { turbo: false }) do |form| %>
  <% if digital_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(digital_product.errors.count, "error") %> prohibited this digital_product from being saved:</h2>

      <ul>
        <% digital_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Name", class: "usa-label" %>
    <%= form.text_field :name, class: "usa-input", required: true %>
  </div>

  <div class="field">
    <%= form.label :short_description, class: "usa-label" %>
    <%= form.text_field :short_description, class: "usa-input", required: true %>
  </div>

  <div class="field">
    <%= form.label :long_description, class: "usa-label" %>
    <div class="usa-hint font-sans-2xs">
      Should be the same or similar to your app store description
    </div>
    <%= form.text_area :long_description, class: "usa-textarea" %>
  </div>

  <div class="field">
    <%= form.label :screenshot_url, "Icon URL", class: "usa-label" %>
    <div class="usa-hint font-sans-2xs">
      Please provide the URL of the app or websiteâ€™s icon
    </div>
    <%= form.text_field :screenshot_url, class: "usa-input" %>
  </div>

  <div class="field" hidden>
    <%= form.label :code_repository_url, class: "usa-label" %>
    <%= form.text_field :code_repository_url, class: "usa-input" %>
  </div>

  <div class="field">
    <%= form.label :language, class: "usa-label" %>
    <select class="usa-select" name="digital_product[language]" id="digital_product_language">
      <option value="">Select</option>
      <option selected="selected" value="English">English</option>
      <option value="Afrikaans">Afrikaans</option>
      <option value="Amharic">Amharic</option>
