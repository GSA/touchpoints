<% content_for :navigation_title do %>
  Performance reporting
  <%= link_to performance_edit_admin_organization_path(@organization), class: "usa-button usa-button-inverted float-right" do %>
    <i class="fa fa-pencil-alt"></i>
    Edit
  <% end %>
<% end %>

<p>
  <%= link_to admin_performance_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Performance
  <% end %>
</p>

<div>
  <h2>
    <%= @organization.name %>
  </h2>
  <div class="grid-row">
    <div class="grid-col-12 usa-prose">
      <p>
        <strong>
          <%= @organization.abbreviation %>
        </strong>
      </p>
      <p>
        <%= @organization.mission_statement %>
      </p>

      <hr>

      <div class="grid-row font-sans-lg">
        <div class="grid-col-12">
          <p>
            Strategic plan
            &nbsp;
            <%= link_to "PDF", @organization.strategic_plan_url, class: "font-sans-xs" %>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
          <p>
            Performance plan (next year)
            &nbsp;
            <%= link_to "PDF", @organization.performance_url, class: "font-sans-xs" %>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
          <p>
            Learning agenda
            &nbsp;
            <%= link_to "Link to evaluation.gov", @organization.learning_agenda_url, class: "font-sans-xs" %>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<section>
  <h4>
    Strategic goals (4-year)
  </h4>
<% @organization.goals.where(four_year_goal: true, parent_id: nil).all.each do |goal| %>
  <div>
    <div class="font-sans-lg">
      <%= goal.name %>
    </div>
    <br>

    <% goal.objectives.each do |g| %>
    <div class="grid-row">
      <div class="grid-col-2">
      </div>
      <div class="grid-col-5">
        <div class="font-sans-md">
          <%= link_to g.name, admin_objective_path(g) %>
        </div>
      </div>
      <div class="grid-col-5">
        <%= g.description %>
      </div>
    </div>
    <br>
    <br>
    <% end %>
    <%= link_to "Create Objective", new_admin_objective_path(goal_id: goal.id), class: "usa-button usa-button--outline" %>
  </div>
  <br>
  <br>
<% end %>
<%= link_to "Create 4-yr strategic goal", new_admin_goal_path(four_year_goal: true, organization_id: @organization.id), class: "usa-button" %>
</section>
<br>
<hr>

<section>
  <h4>
    Annual Performance Goals (APG) (2-year)
  </h4>

  <% @organization.goals.annual_performance_goals.each do |goal| %>
  <div class="font-sans-lg">
    <%= link_to goal.name, apg_admin_organization_path(@organization, goal) %>
  </div>
  <br>
  <br>
  <% end %>

  <p>
    <%= link_to "Create 2-year APG", new_admin_goal_path(four_year_goal: false, organization_id: @organization.id), class: "usa-button" %>
  </p>
</section>
