<% content_for :navigation_title do %>
  Performance reporting
  <%= link_to performance_edit_admin_organization_path(@organization), class: "usa-button usa-button-inverted float-right" do %>
    <i class="fa fa-pencil-alt"></i>
    Edit
  <% end %>
<% end %>

<p>
  <%= link_to admin_performance_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Performance
  <% end %>
</p>

<div>
  <h2>
    <%= @organization.name %>
  </h2>
  <div class="grid-row">
    <div class="grid-col-12 usa-prose">
      <p>
        <strong>
          <%= @organization.abbreviation %>
        </strong>
      </p>
      <p>
        <%= @organization.mission_statement %>
      </p>

      <hr>

      <div class="grid-row font-sans-lg">
        <div class="grid-col-12">
          <p>
            Strategic plan
            &nbsp;
            <a href="#" class="font-sans-xs">PDF</a>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
          <p>
            Performance plan (next year)
            &nbsp;
            <a href="#" class="font-sans-xs">PDF</a>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
          <p>
            Learning agenda
            &nbsp;
            <a href="#" class="font-sans-xs">Link to evaluation.gov</a>
            &nbsp;
            <i class="fa fa-external-link-alt font-sans-xs"></i>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<section>
  <h4>
    Strategic goals (4-year)
  </h4>
  <% @organization.goals.where(four_year_goal: true, parent_id: nil).all.each do |goal| %>
    <div>
      <div class="font-sans-lg">
        <%= link_to goal.name, admin_goal_path(goal) %>
      </div>
      <p>
      <% if goal.objectives.size > 0 %>
        Objectives:
      <% end %>
      <ul>
        <% goal.objectives.each do |obj| %>
          <li><%= obj.name %></li>
        <% end %>
      </ul>
      </p>
    </div>
  <% end %>
  <div class="new-four-year-goal"></div>
  <%= link_to "Create 4-yr strategic goal", new_admin_goal_path(four_year_goal: true, organization_id: @organization.id), class: "usa-button create-4-year-goal" %>
</section>
<br>
<hr>

<section>
  <h4>
    Annual Performance Goals (APG) (2-year)
  </h4>

  <% @organization.goals.annual_performance_goals.each do |goal| %>
  <div class="font-sans-lg">
    <%= link_to goal.name, admin_goal_path(goal) %>
  </div>
  <br>
  <% end %>
  <div class="new-two-year-apg"></div>
  <%= link_to "Create 2-year APG", new_admin_goal_path(four_year_goal: false, organization_id: @organization.id), class: "usa-button create-2-year-apg" %>
</section>
<script>
  $(".create-2-year-apg")
    // pull up new goal page in new-two-year-apg div
    // create new partial with just title

  $(".create-4-year-goal")
    // pull up new goal page in new-four-year-goal div

</script>
