<% content_for :navigation_title do %>
  Objectives
<% end %>
<p>
  <%= link_to admin_performance_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Performance
  <% end %>
</p>

<table class="usa-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Organization</th>
      <th>Goal</th>
      <th>Milestone</th>
      <th>Tags</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.name %></td>
        <td><%= objective.description %></td>
        <td><%= objective.organization_id %></td>
        <td><%= objective.goal_id %></td>
        <td><%= objective.milestone_id %></td>
        <td><%= objective.tags %></td>
        <td><%= objective.users %></td>
        <td><%= link_to 'Show', admin_objective_path(objective) %></td>
        <td><%= link_to 'Edit', edit_admin_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', admin_objective_path(objective), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'New Objective', new_admin_objective_path, class: "usa-button" %>
</p>
