<% content_for :navigation_title do %>
  Event Log for <%= @website.domain %>
<% end %>
<p>
  <%= link_to admin_website_path(@website) do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Website
  <% end %>
</p>

<% if @events.present? %>
<ul class="usa-list">
<% @events.each do |event| %>
<li>
  <div class="">
    <span class="user-email">
      <%= event.user.email %>
    </span>
    <span class="action">
    <% if event.name == "website_created" %>
      created
    <% elsif event.name == "website_updated" %>
      updated
    <% elsif event.name == "website_state_changed" %>
      changed the website state
    <% elsif event.name == "website_approved" %>
      approved
    <% elsif event.name == "website_denied" %>
      denied
    <% elsif event.name == "website_deleted" %>
      deleted
    <% end %>
    </span>
    <span class="target-object">
      <%= link_to @website.domain, admin_website_path(@website) %>
    </span>
    at
    <span class="datetime">
      <%= event.created_at %>
    </span>
  </div>
  </li>
<% end %>
</ul>
<% else %>
<div class="usa-alert usa-alert--info">
  <div class="usa-alert__body">
    <p class="usa-alert__text">
      No logged events exist yet for this website.
    </p>
  </div>
</div>
<% end %>
<br>
