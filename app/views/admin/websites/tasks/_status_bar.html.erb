<div class="border border-base-lighter padding-2 margin-bottom-2">
  <div class="margin-bottom-2">
    <span class="usa-tag bg-violet">
      for Registry Managers
    </span>
  </div>
  <%- if organizational_website_manager_permissions?(user: current_user) && website.in_development? %>

  <% end -%>

  <%- if website.created? %>
    <%= link_to submit_admin_website_path(website), class: "usa-button bg-green full-width", method: :post do %>
      <span class="fa fa-check"></span>
      &nbsp;
      Submit
    <% end %>
    <br>
    <br>
  <% end %>

  <%- if website.submitted? %>
    <%= link_to publish_admin_website_path(website), class: "usa-button full-width", method: :post do %>
      <span class="fa fa-pencil-alt"></span>
      &nbsp;
      Publish
    <% end %>
    <br>
    <br>
  <% end %>

  <%- if website.staging? || website.published? %>
    <%= link_to archive_admin_website_path(website), class: "usa-button bg-base full-width", method: :post do %>
      <span class="fa fa-archive"></span>
      &nbsp;
      Archive
    <% end %>
    <br>
    <br>
  <% end %>

  <%- if website.archived? %>
  <div class="usa-alert usa-alert--warning margin-bottom-2">
    <div class="usa-alert__body">
      <p class="usa-alert__text">
        This site has been archived.
      </p>
    </div>
  </div>
  <% end %>

  <%- if organizational_website_manager_permissions?(user: current_user) %>
    <div class="grid-row">
      <div class="grid-col-12">
        <%= link_to reset_admin_website_path(website), class: "usa-button usa-button--secondary full-width", method: :post do %>
        <span class="fa fa-backward"></span>
        &nbsp;
        Reset
        <% end %>
      </div>
    </div>
  <% end %>
</div>
