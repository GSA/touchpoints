<% content_for :navigation_title do %>
  Websites
  <%= link_to new_admin_website_path, class: "usa-button usa-button-inverted float-right" do %>
    <i class="fa fa-plus-circle"></i>
    New Website
  <% end %>
<% end %>

<p>
  <%= link_to admin_dashboard_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Admin
  <% end %>
</p>

<div class="usa-alert usa-alert--info">
  <div class="usa-alert__body">
    <p class="usa-alert__text">
      Displaying Websites where the status = 'newly_requested'
    </p>
  </div>
</div>


<div class="search-results">
  <%= render 'results' %>
</div>

<script>
  $(function() {
    $("#main-content").css("overflow-x", "scroll");

    $("#search_text").keyup(function() {
      $.ajax({
        url: '/admin/websites/search',
        data: {
          search: $(this).val()
        }
      });
    });
    $(".search-tag-link").click(function() {
      $("#search_text").val("");
      $.ajax({
        url: '/admin/websites/search',
        data: {
          tag: $(this).attr("data-name")
        }
      });
    });
  });
</script>
