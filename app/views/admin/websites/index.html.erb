<% content_for :navigation_title do %>
  Websites
<% end %>
<p>
  <%= link_to admin_dashboard_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Admin
  <% end %>
</p>

<div class="usa-alert usa-alert--info" >
  <div class="usa-alert__body">
    <h3 class="usa-alert__heading">
      Website inventory is an experimental feature.
    </h3>
    <p class="usa-alert__text">
      The GSA EDX team is current exploring ways to improve governance
      of shared data assets.
    </p>
    <p class="usa-alert__text">
      A shared governance model is being developed to support the maintenance
      of this inventory of GSA websites.
    </p>
  </div>
</div>

<p>
  Count = <%= @websites.size %>
</p>
<table class="usa-table" style="overflow-x: scroll;">
  <thead>
    <tr>
      <th>Production status</th>
      <th>Office</th>
      <th>Sub-office</th>
      <th>Domain</th>
    </tr>
  </thead>

  <tbody>
    <% @websites.order(:production_status).each do |website| %>
      <tr>
        <td><%= website.production_status %></td>
        <td><%= website.office %></td>
        <td><%= website.sub_office %></td>
        <td><%= link_to(website.domain, admin_website_path(website)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create New Website', new_admin_website_path, class: "usa-button" %>
</p>

<script type="text/javascript">
  $(function() {
    $("#main-content").css("overflow-x", "scroll");
  })
</script>
