    <%= form.label :department %>
    <%= form.text_field :department %>
  </div>
  <div class="field">
    <%= form.label :program %>
    <%= form.text_field :program %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
