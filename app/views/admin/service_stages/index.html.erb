<% content_for :navigation_title do %>
  Service Stages for: <%= @service.name %>
<% end %>
<p>
  <%= link_to admin_services_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    Back to Services
  <% end %>
</p>

<table class="usa-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Time</th>
      <th>Total eligble population</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @service_stages.each do |service_stage| %>
      <tr>
        <td><%= link_to service_stage.name, admin_service_service_stage_path(@service, service_stage) %></td>
        <td><%= service_stage.description %></td>
        <td><%= service_stage.time %></td>
        <td><%= service_stage.total_eligble_population %></td>
        <td><%= link_to 'Edit', edit_admin_service_service_stage_path(@service, service_stage) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New Service Stage', new_admin_service_stage_path, class: "usa-button" %>
</p>
