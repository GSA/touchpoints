<table class="usa-table">
  <thead>
    <tr>
      <th data-sortable>Active</th>
      <th data-sortable>Organization</th>
      <th data-sortable>Name</th>
      <th data-sortable># of services</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @service_providers.each do |service_provider| %>
      <tr>
        <td><%= !service_provider.inactive %></td>
        <td>
          <%= render "admin/organizations/badge", organization: service_provider.organization %>
        </td>
        <td><%= link_to service_provider.name, admin_service_provider_path(service_provider) %></td>
        <td><%= service_provider.services.size %></td>
        <td><%= service_provider.tag_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>
