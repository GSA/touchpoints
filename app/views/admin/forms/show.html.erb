<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @form.name %>
</p>
<p>
  <strong>Title:</strong>
  <%= @form.title %>
</p>
<p>
  <strong>Instructions:</strong>
  <%= @form.instructions %>
</p>
<p>
  <strong>Kind:</strong>
  <%= @form.kind %>
</p>
<p>
  <strong>Notes:</strong>
  <%= @form.notes %>
</p>
<p>
  <strong>Status:</strong>
  <%= @form.status %>
</p>
<hr>
<h3>
  Form Definition
</h3>
<% if @form && @touchpoint %>
  <div class="code">
    Example Form - /<%= "components/forms/#{@form.kind}" %>
  </div>
  <%= render partial: "components/forms/#{@form.kind}", locals: { form: @form, touchpoint: @touchpoint } %>
<% else %>
  <div class="usa-alert usa-alert-info">
    <div class="usa-alert-body">
      <p class="usa-alert-text">
        Form content is currently custom-created by the Touchpoints Product Team.
        Please contact the Feedback Analytics Team for assistance.
      </p>
    </div>
  </div>
<% end %>
<hr>
<%= link_to 'Edit', edit_admin_form_path(@form), class: "usa-button" %>
