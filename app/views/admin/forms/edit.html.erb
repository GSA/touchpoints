<div class="well">
  <h1>
    Editing Form
  </h1>
  <div class="grid-row">
    <div class="grid-col-12">
      <%= render 'admin/forms/form', form: @form %>
    </div>
  </div>
</div>
<p>
  <%= link_to 'Show', admin_touchpoint_form_path(@touchpoint, @form), class: "usa-button" if @touchpoint %>
  <%= link_to 'All Forms', admin_forms_path, class: "usa-button usa-button--outline" %>
  <%= link_to 'Delete', admin_touchpoint_form_path(@touchpoint, @form), method: :delete, data: { confirm: 'Are you sure?' }, class: "usa-button usa-button--secondary" if @touchpoint %>
</p>
<br>
<hr>
<br>
<div class="grid-row">
  <div class="grid-col-12">
    <div class="well highlight">
      <h2>
        Form Editor
      </h2>
      <div>
        <% if @form.kind.present? && @form.kind == "custom" %>
          <%= render partial: "components/forms/edit/builder", locals: { touchpoint: @touchpoint, form: @form, questions: @form.questions } %>
        <% else %>
          <div class="usa-alert">
            This is a legacy hard-coded Form
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
