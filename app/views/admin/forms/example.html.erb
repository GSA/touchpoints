<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset='utf-8' />
    <title>
      Touchpoints Example
    </title>

    <!-- Demo content styles -->
    <style>
    .demo-content {
      background-color: #efefef;
      border: 1px solid #E5E5E5;
      min-height: 100px;
    }
    .demo-grid {
      margin-bottom: 4rem;
    }
    .demo-grid div {
      min-height: 300px;
    }
    </style>
    <!-- End demo content styles -->
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

    <!-- Load recruiter locally for dev -->
    <!-- <script src='https://rawgit.com/GSA/recruiter/master/recruiter.js'></script> -->
    <!-- <script src='recruiter.js'></script> -->
  </head>
  <body>
    <!-- Demo content -->
    <% if @form.delivery_method == "inline" %>
    <br>
    <div class="grid-container">
      <div class="grid-col-12">
        <div id="<%= @form.element_selector %>">
          Touchpoint will be rendered here.
        </div>
      </div>
    </div>
    <br>
    <% elsif @form.delivery_method == "custom-button-modal" %>
    <br>
    <div class="grid-container">
      <div class="grid-col-12">
        <a id="<%= @form.element_selector %>">
          Custom button
        </a>
      </div>
    </div>
    <br>
    <% else %>
    <div class="grid-container demo-grid">
      <div class="grid-row grid-gap-md">
        <div class="grid-col-12 demo-content"></div>
      </div>
    </div>
    <div class="grid-container demo-grid">
      <div class="grid-row grid-gap-md">
        <div class="grid-col-8 demo-content"></div>
        <div class="grid-col-4 demo-content"></div>
      </div>
    </div>
    <div class="grid-container demo-grid">
      <div class="grid-row grid-gap-md">
        <div class="grid-col-3 demo-content"></div>
        <div class="grid-col-3 demo-content"></div>
        <div class="grid-col-3 demo-content"></div>
        <div class="grid-col-3 demo-content"></div>
      </div>
    </div>
    <div class="grid-container demo-grid">
      <div class="grid-row grid-gap-md">
        <div class="grid-col-8 demo-content"></div>
        <div class="grid-col-4 demo-content"></div>
      </div>
    </div>
    <% end %>

<!-- BEGIN test USWDS MODAL -->
<div class="margin-y-3">
  <a
    href="#example-modal-1"
    class="usa-button"
    aria-controls="example-modal-1"
    data-open-modal
    >Open default modal</a
  >
  <div
    class="usa-modal"
    id="example-modal-1"
    aria-labelledby="modal-1-heading"
    aria-describedby="modal-1-description"
  >
    <div class="usa-modal__content">
      <div class="usa-modal__main">
        <h2 class="usa-modal__heading" id="modal-1-heading">
          Are you sure you want to continue?
        </h2>
        <div class="usa-prose">
          <p id="modal-1-description">
            You have unsaved changes that will be lost.
          </p>
        </div>
        <div class="usa-modal__footer">
          <ul class="usa-button-group">
            <li class="usa-button-group__item">
              <button type="button" class="usa-button" data-close-modal>
                Continue without saving
              </button>
            </li>
            <li class="usa-button-group__item">
              <button
                type="button"
                class="usa-button usa-button--unstyled padding-105 text-center"
                data-close-modal
              >
                Go back
              </button>
            </li>
          </ul>
        </div>
      </div>
      <button
        class="usa-button usa-modal__close"
        aria-label="Close this window"
        data-close-modal
      >
        <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
          <use xlink:href="/assets/img/sprite.svg#close"></use>
        </svg>
      </button>
    </div>
  </div>
</div>
<%= javascript_include_tag 'uswds', integrity: true %>
<!-- END test USWDS MODAL -->
    <!--- End demo content -->
    <script src="<%= touchpoint_url(@form.short_uuid, format: :js) %>" integrity="sha256-<%= form_integrity_checksum(form: @form) %>" async></script>
  </body>
</html>
