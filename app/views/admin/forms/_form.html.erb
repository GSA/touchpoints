<%= form_with(model: form, url: (form.persisted? ? admin_form_path(form) : admin_forms_path), local: true) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>
  <div class="field">
    <%= f.label :disclaimer_text %>
    <%= f.text_area :disclaimer_text %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :character_limit %>
    (100,000 characters max)
    <%= f.text_field :character_limit %>
  </div>
  <div class="field">
    <%= f.label :whitelist_url %>
    <%= f.text_field :whitelist_url %>
  </div>
  <div class="field">
    <%= f.label :whitelist_test_url %>
    <%= f.text_field :whitelist_test_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
