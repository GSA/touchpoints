  </div>
  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_field :instructions %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :status %>
