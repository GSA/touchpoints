<%= form_with(model: form, url: (form.persisted? ? admin_form_path(form) : admin_forms_path), local: true) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="usa-grid-full">
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>
  <div class="usa-grid-full">
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.check_box :display_header_logo %>
        <%= f.label :display_header_logo, "Display (320px wide by 80px tall) Organization logo before the title in the Form header?" %>
      </div>
    </div>
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.check_box :display_header_square_logo %>
        <%= f.label :display_header_square_logo, "Display Square (80px wide by 80px tall) Organization logo before the title in the Form header?" %>
      </div>
    </div>
  </div>
  <div class="usa-grid-full">
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :modal_button_text %>
        <%= f.text_field :modal_button_text %>
      </div>
    </div>
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :success_text %>
        <%= f.text_area :success_text %>
      </div>
    </div>
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :instructions %>
        <%= f.text_area :instructions %>
      </div>
    </div>
    <div class="usa-width-one-half">
      <div class="field">
        <%= f.label :disclaimer_text %>
        <%= f.text_area :disclaimer_text %>
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :character_limit %>
    (100,000 characters max)
    <%= f.text_field :character_limit %>
  </div>
  <%= render 'components/whitelist_options', f: f %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
