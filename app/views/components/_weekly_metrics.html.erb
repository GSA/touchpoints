<div class="well">
  <h2>
    Weekly Product Metrics
  </h2>
  <div class="usa-alert usa-alert--info">
    <div class="usa-alert__body">
      <p class="usa-alert__text">
        These metrics are reported up to the GSA TTS Data Portfolio on a weekly basis.
      </p>
    </div>
  </div>
  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Users
        </th>
        <th>
          Agencies
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="reportable-users">
          <%= User.count %>
        </td>
        <td class="reportable-organizations">
          <%= Organization.count %>
        </td>
      </tr>
    </tbody>
  </table>

  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Forms
        </th>
        <th>
          Responses
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="reportable-forms">
          <%= Form.non_templates.count %>
        </td>
        <td class="reportable-submissions">
          <%= number_with_delimiter(Submission.count) %>
        </td>
      </tr>
    </tbody>
  </table>

  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Service Providers
        </th>
        <th>
          Services
        </th>
        <th>
          Service stages
        </th>
        <th>
          Personas
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= ServiceProvider.count %>
        </td>
        <td>
          <%= Service.count %>
        </td>
        <td>
          <%= ServiceStage.count %>
        </td>
        <td>
          <%= Persona.count %>
        </td>
      </tr>
    </tbody>
  </table>

  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Data Collections
        </th>
        <th>
          Service details
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= Collection.count %>
        </td>
        <td>
          <%= OmbCxReportingCollection.count %>
        </td>
      </tr>
    </tbody>
  </table>
  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Goals
        </th>
        <th>
          Objectives
        </th>
        <th>
          Milestones
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= Goal.count %>
        </td>
        <td>
          <%= Objective.count %>
        </td>
        <td>
          <%= Milestone.count %>
        </td>
      </tr>
    </tbody>
  </table>
  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Websites
        </th>
        <th>
          Digital products
        </th>
        <th>
          Social media accounts
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= number_with_delimiter(Website.count) %>
        </td>
        <td>
          <%= number_with_delimiter(DigitalProduct.count) %>
        </td>
        <td>
          <%= number_with_delimiter(DigitalServiceAccount.count) %>
        </td>
      </tr>
    </tbody>
  </table>

  <table class="usa-table width-full">
    <thead>
      <tr>
        <th>
          Events
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= number_with_delimiter(Event.count) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
