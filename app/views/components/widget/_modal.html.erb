<div id="fba-modal-dialog">
  <h3 id="fba-modal-title">
    <%= touchpoint.form.title %>
  </h3>
  <% unless touchpoint.delivery_method == "inline" %>
  <a id="fba-modal-close" type="button" href="#">Ã—</a>
  <% end %>
  <p id="fba-instructions">
    <%= sanitize(touchpoint.form.instructions) %>
  </p>
  <%= render 'components/forms/flash' %>

  <% if touchpoint.form.kind == "custom" %>
    <%= render partial: "components/forms/custom", locals: { touchpoint: touchpoint, form: touchpoint.form, questions: touchpoint.form.questions } %>
  <% else %>
    <%= render partial: "components/forms/#{touchpoint.form.kind}", locals: { form: touchpoint.form, touchpoint: touchpoint } %>
  <% end %>

  <%= render partial: 'components/forms/footer', locals: { touchpoint: @touchpoint } %>
</div>
