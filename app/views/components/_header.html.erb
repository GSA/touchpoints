<a class="usa-skipnav" href="#main-content">Skip to main content</a>
<%= render 'components/usa-banner' unless request.path[0..5] == "/admin" %>
<%= render 'components/beta-banner' %>
<header class="usa-header usa-header-extended" role="banner">
  <div class="usa-navbar">
    <div class="usa-logo" id="extended-logo">
      <em class="usa-logo-text">
        <a href="/" title="Touchpoints" aria-label="Home">
          <%= image_tag "touchpoints-logo-@2x.png", class: "header-logo" %>
        </a>
      </em>
    </div>
    <button class="usa-menu-btn">Menu</button>
  </div>
  <nav role="navigation" class="usa-nav light-blue-bg">
    <div class="usa-nav-inner">
      <button class="usa-nav-close">
        <%= image_tag "close.svg", alt: "close" %>
      </button>
      <ul class="usa-nav-primary usa-accordion">
        <% if admin_permissions? %>
          <li>
            <a class="usa-nav-link admin" href="/admin">
              <span>Admin</span>
            </a>
          </li>
          <li>
            <a class="usa-nav-link admin" href="/admin/users">
              <span>Users</span>
            </a>
          </li>
          <li>
            <a class="usa-nav-link" href="/admin/services">
              <span>Services</span>
            </a>
          </li>
          <li>
            <%= link_to "Touchpoints", admin_touchpoints_path, class: "usa-nav-link" %>
          </li>
          <li>
            <a class="usa-nav-link" href="/admin/forms">
              <span>Forms</span>
            </a>
          </li>
          <li>
            <a class="usa-nav-link" href="https://feedback.usa.gov" target="_blank" rel="noopener">
              Support
            </a>
          </li>
        <% end %>
        <% if current_user && !current_user.admin? %>
        <li>
          <a class="usa-nav-link" href="/admin/services">
            <span>Services</span>
          </a>
        </li>
        <li>
          <%= link_to "Touchpoints", admin_touchpoints_path, class: "usa-nav-link" %>
        </li>
        <li>
          <%= link_to "Form Templates", admin_form_templates_path, class: "usa-nav-link" %>
        </li>
        <% end %>
        <% if !current_user %>
        <li>
          <button class="usa-accordion-button usa-nav-link hide" aria-expanded="false" aria-controls="extended-nav-section-two">
            <span>Information</span>
          </button>
          <ul id="extended-nav-section-two" class="usa-nav-submenu">
            <li>
              <a href="https://github.com/GSA/touchpoints/blob/master/docs/PERSONAS.md" target="_blank" rel="noopener">Who uses Touchpoints?</a>
            </li>
            <li>
              <a href="https://github.com/GSA/touchpoints/blob/master/docs/USE_CASES.md" target="_blank" rel="noopener">What can users do?</a>
            </li>
            <li>
              <a href="https://github.com/gsa/touchpoints" target="_blank" rel="noopener">Code</a>
            </li>
          </ul>
        </li>
        <% end %>
      </ul>
      <div class="usa-nav-secondary">
        <ul class="usa-unstyled-list usa-nav-secondary-links">
          <% unless current_user %>
          <li>
            <%= link_to user_login_dot_gov_omniauth_authorize_path do %>
              Sign in with Login.gov
            <% end %>
          </li>
          <% else %>
          <li>
            <a>
              <%= current_user.email %>
            </a>
          </li>
          <li>
            <a href="/users/sign_out">
              Sign out
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
<div class="usa-overlay"></div>
