<div class="text-uppercase font-body-3xs margin-top-2">
  Responses by status
</div>
<table class="usa-table width-full font-sans-2xs">
  <thead>
    <tr>
      <th>
        Received
      </th>
      <th>
        Acknowledged
      </th>
      <th>
        Dispatched
      </th>
      <th>
        Responded
      </th>
      <th>
        Flagged
      </th>
      <th>
        Marked as spam
      </th>
      <th>
        Archived
      </th>
      <th>
        Deleted
      </th>
      <th>
        Total
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= number_with_delimiter(responses_by_status["received"]) %>
      </td>
      <td>
        <%= number_with_delimiter(responses_by_status["acknowledged"]) %>
      </td>
      <td>
        <%= number_with_delimiter(responses_by_status["dispatched"]) %>
      </td>
      <td>
        <%= number_with_delimiter(responses_by_status["responded"]) %>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
        <%= number_with_delimiter(responses_by_status["total"]) %>
      </td>
    </tr>
    <tr>
      <td>

      </td>
      <td>

      </td>
      <td>

      </td>
      <td>

      </td>
      <td>
        <%= link_to responses_admin_form_path(@form, flagged: 1) do %>
        <%= number_with_delimiter(responses_by_status["flagged"]) %>
        <% end %>
      </td>
      <td>
        <%= link_to responses_admin_form_path(@form, spam: 1) do %>
          <%= number_with_delimiter(responses_by_status["marked"]) %>
        <% end %>
      </td>
      <td>
        <%= link_to responses_admin_form_path(@form, archived: 1) do %>
          <%= number_with_delimiter(responses_by_status["archived"]) %>
        <% end %>
      </td>
      <td>
        <%= link_to responses_admin_form_path(@form, deleted: 1) do %>
          <%= number_with_delimiter(responses_by_status["deleted"]) %>
        <% end %>
      </td>
      <td>
      </td>
    </tr>
  </tbody>
</table>
