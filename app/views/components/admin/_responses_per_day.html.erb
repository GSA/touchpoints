<%= javascript_include_tag "chartjs-2.9.3.bundle.js" %>

<div id="daily-responses">
  <h3>
    Responses per day
  </h3>

  <div style="width:100%;">
    <canvas id="myChart"></canvas>
  </div>
</div>

<script>
$(function() {
  var ctx = document.getElementById('myChart').getContext('2d');
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: [
      <% response_groups.each do |key, value| %>
        '<%= key.strftime("%m-%d") %>',
      <% end %>
      ],
      datasets: [{
        label: '# of Responses',
        data: [
        <% response_groups.each do |key, value| %>
          <%= value %>,
        <% end %>
        ],
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      legend: {
        position: 'bottom',
      },
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  });
})
</script>
