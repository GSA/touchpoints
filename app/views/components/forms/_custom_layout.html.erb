<div class="grid-row">
  <div class="grid-col-12">
    <h2 class="justify-vertical">
      <% if form.display_header_logo && form.organization.logo.present? %>
        <%= image_tag(form.organization.logo.tag.url, alt: "Organization logo", class: "form-header-logo") %>
      <% end %>
      <% if form.display_header_square_logo && form.organization.logo.present? %>
        <%= image_tag(form.organization.logo.logo_square.url, alt: "Organization logo", class: "form-header-logo-square") %>
      <% end %>
      <%= form.title %>
    </h2>
    <% if form.instructions.present? %>
      <p>
        <%= sanitize(form.instructions) %>
      </p>
    <% end %>
    <%= render 'components/forms/flash' %>
    <%= render partial: "components/forms/custom", locals: { form: form, questions: form.questions } %>
  </div>
</div>
<br>
<%= render partial: 'components/forms/footer', locals: { form: form } %>
