<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <label class="usa-label" for="<%= question.answer_field.to_sym %>">
    <%= question_number %>.
    <%= question.text %>
  </label>
  <p>
    <span class="usa-tag">
      <%= question.answer_field %>
    </span>
    <% if question.is_required? %>
    <span class="usa-tag bg-secondary-vivid">
      Required
    </span>
    <% end %>
  </p>
  <%= text_area_tag question.answer_field.to_sym, nil, class: "usa-textarea" %>
</div>
