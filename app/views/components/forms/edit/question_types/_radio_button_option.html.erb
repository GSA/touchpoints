<div class="radio-button usa-radio question-option list-group-item" id="<%= dom_id(option) %>" data-id="<%= option.id %>">
  <%= radio_button_tag(question.answer_field.to_sym, index + 1, nil, { value: option.value, class: "usa-radio__input", required: question.is_required  }) %>
  <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-radio__label") do %>
    <span class="question-option-view">
      <%= option.text %>
      <% if option.text != option.value %> (<%= option.value %>)<% end %>
    </span>
    <span class="question-option-edit">
      <input type="text" name="question_option[text]" value="<%= option.text %>" class="usa-input display-inline" />&nbsp;&nbsp;
      <input type="text" name="question_option[value]" value="<%= option.value %>" class="usa-input display-inline"/>&nbsp;&nbsp;
      <%= link_to admin_form_question_question_option_path(question.form, question, option), class: "delete button form-save-question-option"  do %>
        <i class="fas fa-save" title="Save question option text and value" style="display:inherit; color: blue;"></i>
      <% end %>
    </span>
    <span class="float-right">
      <%= link_to admin_form_question_question_option_path(question.form, question, option), class: "delete button form-delete-question-option", method: :delete, data: { remote: true } do %>
        <i class="fas fa-trash-alt" title="Delete question option"></i>
      <% end %>
    </span>
  <% end %>
</div>
