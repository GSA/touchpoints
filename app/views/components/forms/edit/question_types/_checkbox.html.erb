<fieldset class="radios" role="group" aria-labelledby="answer_01">
  <h4>
    <%= question_number %>.
    <%= question.text %>
    <span class="usa-tag">
      <%= question.answer_field %>
    </span>
  </h4>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="radio-button">
    <%= check_box_tag question.answer_field.to_sym, index + 1 %>
    <%= label_tag nil, for: "#{question.answer_field.to_sym}_#{(index + 1).to_s}" do %>
      <%= option.text %>
      <%= link_to "Edit", edit_admin_form_question_question_option_path(option.question.form, option.question, option) %>
    <% end %>
  </div>
  <% end %>
  <%= link_to "Add Checkbox Option", new_admin_form_question_question_option_path(question.form, question), class: "usa-button" %>
</fieldset>
