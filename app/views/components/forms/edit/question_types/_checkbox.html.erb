<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <label class="usa-label">
    <%= question_number %>.
    <%= question.text %>
    <p>
      <span class="usa-tag">
        <%= question.answer_field %>
      </span>
      <% if question.is_required? %>
      <span class="usa-tag bg-secondary-vivid">
        Required
      </span>
      <% end %>
    </p>
  </label>
  <br>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="radio-button">
    <%= check_box_tag("#{question.answer_field}_#{(index + 1).to_s}", index + 1, nil, { value: option.text , class: "usa-checkbox__input" }) %>
    <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-checkbox__label") do %>
        <span class="question-option-view"><%= option.text %></span>
        <input type="text" value="<%= option.text %>" class="usa-input display-inline question-option-edit" data-href="<%= admin_form_question_question_option_path(option.question.form, option.question, option) %>" />
      <%= link_to raw('<i class="edit button fas fa-pencil-alt" title="Edit text" style="display:inherit"></i>'), edit_admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none", class: "form-edit-question-option-checkbox" %>
      <%= link_to raw('<i class="delete button fas fa-trash-alt" title="Delete question option" style="display:inherit; color: red"></i>'), admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none", class: "form-delete-question-option" %>
    <% end %>
  </div>
  <% end %>
  <div class="new-question-options-div">
    <%= link_to "Add Checkbox Option", new_admin_form_question_question_option_path(question.form, question), class: "usa-button usa-button--outline form-add-question-option" %>
  </div>
</div>
