<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <%= render 'components/question_title', question: question, form_builder: true %>
  <br>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="question-option">
    <%= check_box_tag("#{question.answer_field}_#{(index + 1).to_s}", index + 1, nil, { value: option.text , class: "usa-checkbox__input" }) %>
    <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-checkbox__label") do %>
      <span class="question-option-view"><%= option.text %></span>
      <span class="question-option-edit">
        <input type="text" value="<%= option.text %>" class="usa-input display-inline" data-href="<%= admin_form_question_question_option_path(option.question.form, option.question, option) %>" />
      </span>
      <span class="float-right">
        <%= link_to edit_admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none;", class: "edit button form-edit-question-option-checkbox" do %>
        <i class="fas fa-pencil-alt" title="Edit text" style="display:inherit;"></i>
        <% end %>
        &nbsp;
        &nbsp;
        <%= link_to admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none;", class: "delete button form-delete-question-option" do %>
          <i class="fas fa-trash-alt" title="Delete question option" style="display:inherit; color: red;"></i>
        <% end %>
      </span>
    <% end %>
  </div>
  <% end %>
  <div class="new-question-options-div">
    <%= link_to new_admin_form_question_question_option_path(question.form, question), class: "usa-button usa-button--outline form-add-question-option" do %>
      <i class="fa fa-plus"></i>
      Add Checkbox Option
    <% end %>
  </div>
</div>
