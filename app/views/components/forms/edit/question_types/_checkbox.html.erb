<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <label class="usa-label">
    <%= question_number %>.
    <%= question.text %>
    <p>
      <span class="usa-tag">
        <%= question.answer_field %>
      </span>
      <% if question.is_required? %>
      <span class="usa-tag" style="background-color: red;">
        Required
      </span>
      <% end %>
    </p>
  </label>
  <br>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="radio-button">
    <%= check_box_tag("#{question.answer_field}_#{(index + 1).to_s}", index + 1, nil, { value: option.text , class: "usa-checkbox__input" }) %>
    <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-checkbox__label") do %>
      <%= option.text %>
      <%= link_to "Edit", edit_admin_form_question_question_option_path(option.question.form, option.question, option) %>
    <% end %>
  </div>
  <% end %>
  <div class="new-question-options-div">  
    <%= link_to "Add Checkbox Option", new_admin_form_question_question_option_path(question.form, question), class: "usa-button form-add-question-option" %>
  </div>
</div>
