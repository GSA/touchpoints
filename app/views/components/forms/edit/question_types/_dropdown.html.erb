<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <label class="usa-label">
    <%= question_number %>.
    <%= question.text %>
    <span class="usa-tag">
      <%= question.answer_field %>
    </span>
  </label>
  <br>
  <div class="radio-button">
    <%= select_tag(question.answer_field.to_sym, options_for_select(question.question_options.each_with_index.map { |option, index| [option.text] }), { prompt: "Select one", class: "usa-select" }) %>
  </div>
  <%= link_to "Add Dropdown Option", new_admin_form_question_question_option_path(question.form, question), class: "usa-button" %>
</div>
