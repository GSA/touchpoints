<fieldset class="usa-fieldset radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <legend class="usa-sr-only"><%= question.answer_field %></legend>
  <label class="usa-label">
    <%= question_number %>.
    <%= question.text %>
    <p>
      <span class="usa-tag">
        <%= question.answer_field %>
      </span>
      <% if question.is_required? %>
      <span class="usa-tag bg-secondary-vivid">
        Required
      </span>
      <% end %>
    </p>
  </label>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="usa-checkbox">
    <%= radio_button_tag(question.answer_field.to_sym, index + 1, nil, { value: option.value, class: "usa-radio__input", required: question.is_required  }) %>
    <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-radio__label") do %>
        <span class="question-option-view"><%= option.text %></span>
        <input type="text" value="<%= option.text %>" class="usa-input display-inline question-option-edit" data-href="<%= admin_form_question_question_option_path(option.question.form, option.question, option) %>" />
      <%= link_to raw('<i class="edit button fas fa-pencil-alt" title="Edit text" style="display:inherit"></i>'), edit_admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none", class: "form-edit-question-option-checkbox" %>
      <%= link_to raw('<i class="delete button fas fa-trash-alt" title="Delete question option" style="display:inherit; color: red"></i>'), admin_form_question_question_option_path(option.question.form, option.question, option), style: "text-decoration: none", class: "form-delete-question-option float-right" %>
    <% end %>
  </div>
  <% end %>
  <div class="new-question-options-div">
    <%= link_to new_admin_form_question_question_option_path(question.form, question), class: "usa-button form-add-question-option" do %>
      <i class="fa fa-plus"></i>
      Add Radio Button Option
    <% end %>
  </div>
</fieldset>
