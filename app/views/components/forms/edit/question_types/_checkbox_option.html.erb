<div class="question-option list-group-item" id="<%= dom_id(option) %>" data-id="<%= option.id %>">
  <%= check_box_tag("#{question.answer_field}_#{(index + 1).to_s}", index + 1, nil, { value: option.text , class: "usa-checkbox__input" }) %>
  <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-checkbox__label") do %>
    <span class="question-option-view"><%= option.text %>(<%= option.value %>)</span>
    <span class="question-option-edit">
      <input type="text" value="<%= option.text %>" class="usa-input display-inline" />&nbsp;&nbsp;
      <input type="text" value="<%= option.value %>" class="usa-input display-inline"/>&nbsp;&nbsp;
      <%= link_to admin_form_question_question_option_path(question.form, question, option), class: "delete button form-save-question-option"  do %>
        <i class="fas fa-save" title="Save question option text and value"></i>
      <% end %>
    </span>
    <span class="float-right">
      <%= link_to admin_form_question_question_option_path(question.form, question, option), class: "delete button form-delete-question-option", method: :delete, data: { remote: true } do %>
        <i class="fas fa-trash-alt" title="Delete question option"></i>
      <% end %>
    </span>
  <% end %>
</div>
