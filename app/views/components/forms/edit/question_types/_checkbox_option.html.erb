<div class="question-option list-group-item" id="<%= dom_id(option) %>" data-id="<%= option.id %>">
  <%= check_box_tag("#{question.answer_field}_#{(index + 1).to_s}", index + 1, nil, { value: option.text , class: "usa-checkbox__input" }) %>
  <%= label_tag(nil, for: "#{question.answer_field}_#{(index + 1).to_s}", class: "usa-checkbox__label") do %>
    <span class="question-option-view"><%= option.text %></span>
    <span class="question-option-edit">
      <input type="text" value="<%= option.text %>" class="usa-input display-inline" data-href="<%= admin_form_question_question_option_path(question.form, question, option) %>" />
    </span>
    <span class="float-right">
      <%= link_to edit_admin_form_question_question_option_path(question.form, question, option), style: "text-decoration: none;", class: "edit button form-edit-question-option-checkbox" do %>
        <i class="fas fa-pencil-alt" title="Edit text" style="display:inherit;"></i>
      <% end %>
      &nbsp;
      &nbsp;
      <%= link_to admin_form_question_question_option_path(question.form, question, option), style: "text-decoration: none;", class: "delete button form-delete-question-option", method: :delete, data: { confirm: 'Are you sure?', remote: true } do %>
        <i class="fas fa-trash-alt" title="Delete question option" style="display:inherit; color: red;"></i>
      <% end %>
    </span>
  <% end %>
</div>
