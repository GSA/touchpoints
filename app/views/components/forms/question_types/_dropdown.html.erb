<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <h4>
    <%= question_number %>.
    <%= question.text %>
  </h4>
  <div class="radio-button">
    <%= select_tag(question.answer_field.to_sym, options_for_select(question.question_options.each_with_index.map { |option, index| [option.text] }), { prompt: "Select one", class: "usa-select" }) %>
  </div>
</div>
