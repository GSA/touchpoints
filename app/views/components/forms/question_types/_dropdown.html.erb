<div class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <label class="usa-label">
    <%= t question_number.to_s %>.
    <%= question.text %>
  </label>
  <br>
  <div class="radio-button">
    <%= select_tag(question.answer_field.to_sym, options_for_select(question.question_options.each_with_index.map { |option, index| [option.text] }), { prompt: (t 'form.select_one'), class: "usa-select" }) %>
  </div>
</div>
