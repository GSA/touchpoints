<fieldset class="radios" role="group" aria-labelledby="<%= question.answer_field %>">
  <h4 id="<%= question.answer_field %>">
    <%= question_number %>.
    <%= question.text %>
  </h4>
  <% question.question_options.each_with_index do |option, index| %>
  <div class="radio-button">
    <%= radio_button_tag question.answer_field.to_sym, index + 1 %>
    <%= label_tag nil, for: "#{question.answer_field}_#{(index + 1).to_s}" do %>
      <%= option.text %>
    <% end %>
  </div>
  <% end %>
</fieldset>
