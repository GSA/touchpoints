<div role="group">
  <%= render 'components/question_title', question: question %>
  <%= telephone_field_tag question.answer_field.to_sym, nil, class: "usa-input", required: question.is_required, maxlength: 10 %>
</div>
<script>
	$('#<%= question.answer_field.to_sym %>').on('input', function() {
	    var number = $(this).val().replace(/[^\d]/g, '');
	    if (number.length == 7) {
	      number = number.replace(/(\d{3})(\d{4})/, "$1-$2");
	    } else if (number.length == 10) {
	      number = number.replace(/(\d{3})(\d{3})(\d{4})/, "($1) $2-$3");
	    }
	    $(this).val(number);
	  });
</script>
