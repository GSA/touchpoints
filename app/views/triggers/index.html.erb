<p id="notice"><%= notice %></p>

<h1>Triggers</h1>

<table>
  <thead>
    <tr>
      <th>Touchpoint</th>
      <th>Name</th>
      <th>Kind</th>
      <th>Fingerprint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @triggers.each do |trigger| %>
      <tr>
        <td><%= trigger.touchpoint_id %></td>
        <td><%= trigger.name %></td>
        <td><%= trigger.kind %></td>
        <td><%= trigger.fingerprint %></td>
        <td><%= link_to 'Show', trigger %></td>
        <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
        <td><%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trigger', new_trigger_path %>
